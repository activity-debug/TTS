<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    android:paddingHorizontal="5dp"
    android:paddingVertical="5dp"
    app:cardCornerRadius="15dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cat. "
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/tvItemId" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Title"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/tvItemCategory" />

        <TextView
            android:id="@+id/tvItemId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/shape_list_item_text"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="EF4SD34-5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="By"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/tvItemTitle" />

        <TextView
            android:id="@+id/tvItemCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_list_item_text"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="Umum"
            app:layout_constraintEnd_toEndOf="@+id/tvItemId"
            app:layout_constraintStart_toStartOf="@+id/tvItemId"
            app:layout_constraintTop_toBottomOf="@+id/tvItemId" />

        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_list_item_text"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="10x10"
            app:layout_constraintEnd_toEndOf="@+id/tvItemCategory"
            app:layout_constraintStart_toStartOf="@+id/tvItemCategory"
            app:layout_constraintTop_toBottomOf="@+id/tvItemCategory" />

        <TextView
            android:id="@+id/tvItemCreator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_list_item_text"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="Admin"
            app:layout_constraintEnd_toEndOf="@+id/tvItemTitle"
            app:layout_constraintStart_toStartOf="@+id/tvItemTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvItemTitle" />

        <Button
            android:id="@+id/btnItemEdit"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:icon="@drawable/pen_to_square_solid"
            app:layout_constraintEnd_toStartOf="@+id/btnItemDelete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/btnItemDelete"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/trash_solid"
            app:layout_constraintEnd_toStartOf="@+id/btnShareAsQR"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnItemEdit"
            app:layout_constraintTop_toTopOf="@+id/btnItemEdit" />

        <Button
            android:id="@+id/btnShareAsQR"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/square_share_nodes_solid"
            app:layout_constraintEnd_toStartOf="@+id/btnCloudUp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnItemDelete"
            app:layout_constraintTop_toTopOf="@+id/btnItemDelete" />

        <Button
            android:id="@+id/btnCloudUp"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/cloud_arrow_up_solid"
            app:layout_constraintEnd_toStartOf="@+id/swPublish"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnShareAsQR"
            app:layout_constraintTop_toTopOf="@+id/btnShareAsQR" />

        <Switch
            android:id="@+id/swPublish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_list_item_text"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Switch"
            app:layout_constraintBottom_toBottomOf="@+id/btnCloudUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnCloudUp"
            app:layout_constraintTop_toTopOf="@+id/btnCloudUp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
