        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="C"
        android:textSize="96sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/DDD"
        android:layout_width="120dp"
