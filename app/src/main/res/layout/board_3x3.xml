        android:textSize="96sp" />

    <TextView
        android:id="@+id/FFF"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="F"
        android:textSize="96sp" />

    <TextView
        android:id="@+id/GGG"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="G"
        android:textSize="96sp" />

    <TextView
        android:id="@+id/HHH"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="H"
        android:textSize="96sp" />

    <TextView
        android:id="@+id/AAA"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="A"
        android:textSize="96sp" />

</LinearLayout>