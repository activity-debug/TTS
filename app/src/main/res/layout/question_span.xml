<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSpanQuestion"
        android:layout_width="0dp"
        android:layout_height="70sp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/button_image_disable"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="ketika matiketika matiketika matiketika matiketika mati"
        android:textColor="#5C6BC0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnNextQuestion"
        app:layout_constraintStart_toEndOf="@+id/btnPrevQuestion"
        app:layout_constraintTop_toTopOf="@+id/btnPrevQuestion"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/btnPrevQuestion"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:paddingHorizontal="2sp"
        android:text="◀"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/btnNextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:paddingHorizontal="2sp"
        android:text="▶"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>