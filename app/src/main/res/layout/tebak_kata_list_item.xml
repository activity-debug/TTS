<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    android:paddingHorizontal="5dp"
    android:paddingVertical="5dp"
    app:cardCornerRadius="15dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">

        <Button
            android:id="@+id/btnItemEditTbk"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:icon="@drawable/pen_to_square_solid"
            app:layout_constraintBottom_toBottomOf="@+id/imgItemTbk"
            app:layout_constraintStart_toEndOf="@+id/imgItemTbk" />

        <Button
            android:id="@+id/btnItemDeleteTbk"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/trash_solid"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnItemEditTbk"
            app:layout_constraintTop_toTopOf="@+id/btnItemEditTbk" />

        <Button
            android:id="@+id/btnShareAsQRTbk"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/square_share_nodes_solid"
            app:layout_constraintStart_toEndOf="@+id/btnCloudUpTbk"
            app:layout_constraintTop_toTopOf="@+id/btnCloudUpTbk" />

        <Button
            android:id="@+id/btnCloudUpTbk"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/cloud_arrow_up_solid"
            app:layout_constraintStart_toEndOf="@+id/btnItemDeleteTbk"
            app:layout_constraintTop_toTopOf="@+id/btnItemDeleteTbk" />

        <ImageView
            android:id="@+id/imgItemTbk"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/terka_box" />

        <TextView
            android:id="@+id/tvAnswerTbk"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:text="Soekarno"
            android:background="@drawable/box_shape_siapa"
            app:layout_constraintBottom_toTopOf="@+id/btnItemEditTbk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgItemTbk"
            app:layout_constraintTop_toTopOf="@+id/imgItemTbk" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
